<body class="centered">
    <div class="centered" style="width:1000px;background:#fff;overflow:auto;">
        <img src="{{('/images/splash/nom-a-mom.jpg')}}" width="1000" height="250" alt="Nom-a-Mom Nominate a Super-Mom for Mother's Day" class="centered" />
        {% for flashMessage in app.session.flashbag.get('nomamomnotice') %}
            <div class="notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <div style="float:left;width:700px;">
            <div class="fb-like" data-href="http://www.gcmaz.com{{ path('gcm_contest', {'contest':'nom-a-mom'}) }}" colorscheme="light" data-send="true" data-width="600" data-show-faces="false" data-font="arial" style="margin:10px;padding:0;"></div>
            <p style="font-size:1.2em;color:#000;padding:10px;">Do you know a Super-Mom?  Nominate her for our Super-Mom Contest where she will win a bunch of prizes showing her how much you appreciate her!</p>
            <div class="prizeinfo centered">
                <h4 class="red">Prize Includes:</h4>
                <p>$75 in Flowers from <a href="http://wattersgardencenter.com/" target="_blank">Watters Garden Center</a></p>
                <p>$75 Gift Certificate to Massage Envy from <a href="http://www.prescottspas.com/" target="_blank">Prescott Spas</a></p>
                <p></p>
            </div>
            <form action="{{ path('gcm_contest', {'contest':'nom-a-mom'}) }}" method="post" {{ form_enctype(form) }} class="entryform">
                  {{ form_errors(form) }}
                <div>
                        <h2 style='margin-left:300px;'>Nominee</h2>
                        <div>
                        {{ form_label(form.nominee, 'Super-Moms Name') }}
                        {{ form_errors(form.nominee) }}
                        {{ form_widget(form.nominee) }}
                        </div>
                        {{ form_row(form.where) }}
                        <div>
                        {{ form_label(form.why, 'Why is she a Super-Mom?') }}
                        {{ form_errors(form.why) }}
                        {{ form_widget(form.why) }}
                        </div>
                </div>
                <div>
                    <h2 style='margin-left:300px;'>Your Information</h2>
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                    <div style="width:400px;float:right;margin-right:100px;" class="chck-bxs centered">
                        <br/>
                        <p style="float:right">Which Stations Do you Listen to?</p>
                        <br class="clear"/><br/>
                        {{ form_row(form.kaff) }}
                        {{ form_row(form.kfsz) }}
                        {{ form_row(form.ktmg) }}
                        {{ form_row(form.knot) }}
                    </div>
                    <br class="clear"/>
                </div>
                  {{ form_rest(form) }}
                  <input type="submit" value="Submit" style="float:right;margin:20px;" />
              </form>
        </div>
