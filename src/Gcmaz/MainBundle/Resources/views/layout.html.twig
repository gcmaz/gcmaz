{% extends '::base.html.twig' %}

{% block title %}Great Circle Media Arizona{% endblock %}

{% block description %}
    <meta name="description" content="Great Circle Media Arizona" />
{% endblock %}

{% block keywords %}
    <meta name="keywords" content="Great Circle Media, Great Circle Radio"  />
{% endblock %}
    
{% block favicons %}
    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
    <link rel="icon" href="{{ asset('favicon.png') }}">
    <!--[if IE]><link rel="shortcut icon" href="{{ asset('favicon.ico') }}"><![endif]-->
    <!-- or, set /favicon.ico for IE10 win -->
    <meta name="msapplication-TileColor" content="#4c4c4c">
    <meta name="msapplication-TileImage" content="{{ asset('favicon.png') }}">
{% endblock %}
    
{% block styles %}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/styles.css') }}" />
    <link href='http://fonts.googleapis.com/css?family=Unica+One' rel='stylesheet' type='text/css'>
{% endblock %}
    
{% block ie_crap %}
<!--[if gte IE 9]>
  <style type="text/css">
    .gradient {filter: none;}
  </style>
<![endif]-->
<!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
{% endblock %}

{% block js_top %}
    <script type="text/javascript" src="{{ asset('scripts/jquery-1.9.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('scripts/common.js') }}"></script>
{% endblock %}
    
{% block analytics %}
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-38877504-1']);
        _gaq.push(['_setDomainName', 'gcmaz.com']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'stats.g.doubleclick.net/dc.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
{% endblock %}
      
